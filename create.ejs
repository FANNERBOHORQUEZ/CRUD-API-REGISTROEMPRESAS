        </div>
    </nav>

    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header">Nuevo registro</div>
            <div class="card-body">
                <form action="/save" method="POST">
                    <div class="mb-3">
                        <label for="nit">Nit de tu empresa:</label>
                        <input type="text" id="nit" name="Nitdetuempresa" required>
                    </div>
    
                    <div class="mb-3">
                        <label for="nombre">Nombre de la empresa:</label>
                        <input type="text" id="nombre" name="Nombredelaempresa" required>
                    </div>
    
                    <div class="mb-3">
                        <label for="email">Dirección de correo electrónico:</label>
                        <input type="email" id="email" name="Direcciondecorreo" required>
                    </div>
    
                    <div class="mb-3">
                        <label for="confirmar_email">Confirmar dirección de correo electrónico:</label>
                        <input type="email" id="confirmar_email" name="Confirmardirecciondecorreo" required>
                    </div>
    
                    <div class="mb-3">
                        <label for="telefono">Número de teléfono:</label>
                        <input type="tel" id="telefono" name="Numerodetelefono" required>
                    </div>
    
                    <div class="mb-3">
                        <label for="password">Contraseña:</label>
                        <input type="password" id="password" name="Contraseña" required>
                    </div>
    
                    <div class="mb-3">
                        <label for="confirmar_password">Confirmar Contraseña:</label>
                        <input type="password" id="confirmar_password" name="Confirmarcontraseña" required>
                    </div>
    
                    <div class="mb-3">
                        <label for="servicio">Qué servicio prestará la empresa:</label>
                        <input type="text" id="servicio" name="Queservicioprestaralaempresa" required>
                    </div>
    
                    <div class="mb-3">
                        <label for="rol" class="form-label">Rol</label>
                        <select id="rol" name="rol" class="form-select" aria-label="Default select example">
                            <option value="admin" selected>Admin</option>
                            <option value="data entry">Data Entry</option>
                        </select>
                    </div>
    
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                        <a href="/" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    
    <style>
        .container {
            max-width: 600px;
            margin: auto;
        }
    
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    
        .card-header {
            background-color: #007bff;
            color: white;
            padding: 10px;
        }
    
        .card-body {
            padding: 20px;
        }
    
        form {
            display: flex;
            flex-direction: column;
        }
    
        label {
            margin-bottom: 8px;
            font-weight: bold;
        }
    
        input,
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }
    
        button {
            background-color: #28a745;
            color: white;
            padding: 10px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
        }
    
        button:hover {
            background-color: #218838;
        }
    
        .btn-secondary {
            background-color: #6c757d;
            color: white;
            padding: 10px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }
    
        .btn-secondary:hover {
            background-color: #5a6268;
        }
    </style>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
